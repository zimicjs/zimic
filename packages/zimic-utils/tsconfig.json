{
  "extends": "@zimic/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@@/package.json": ["./package.json"]
    }
  },
  "include": ["**/*.ts", "**/*.mts"],
  "exclude": ["node_modules", "dist", "*.d.ts", "*/*.d.ts"]
}
