{
  "name": "@zimic/utils",
  "description": "Internal utilities shared across Zimic packages",
  "keywords": [],
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zimicjs/zimic.git",
    "directory": "packages/zimic-utils"
  },
  "author": {
    "name": "Diego Aquino",
    "url": "https://github.com/diego-aquino"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "files": [
    "package.json",
    "src",
    "!src/**/tests",
    "!src/**/__tests__",
    "!src/**/*.test.ts",
    "dist",
    "*.d.ts",
    "types/*.d.ts"
  ],
  "exports": {
    "./types": {
      "types": "./types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.js",
      "default": "./dist/types.js"
    },
    "./types/globals": {
      "types": "./types/globals.d.ts",
      "import": "./dist/types/globals.mjs",
      "require": "./dist/types/globals.js",
      "default": "./dist/types/globals.js"
    },
    "./data": {
      "types": "./data.d.ts",
      "import": "./dist/data.mjs",
      "require": "./dist/data.js",
      "default": "./dist/data.js"
    },
    "./error": {
      "types": "./error.d.ts",
      "import": "./dist/error.mjs",
      "require": "./dist/error.js",
      "default": "./dist/error.js"
    },
    "./fetch": {
      "types": "./fetch.d.ts",
      "import": "./dist/fetch.mjs",
      "require": "./dist/fetch.js",
      "default": "./dist/fetch.js"
    },
    "./import": {
      "types": "./import.d.ts",
      "import": "./dist/import.mjs",
      "require": "./dist/import.js",
      "default": "./dist/import.js"
    },
    "./logging": {
      "types": "./logging.d.ts",
      "import": "./dist/logging.mjs",
      "require": "./dist/logging.js",
      "default": "./dist/logging.js"
    },
    "./time": {
      "types": "./time.d.ts",
      "import": "./dist/time.mjs",
      "require": "./dist/time.js",
      "default": "./dist/time.js"
    },
    "./url": {
      "types": "./url.d.ts",
      "import": "./dist/url.mjs",
      "require": "./dist/url.js",
      "default": "./dist/url.js"
    },
    "./process": {
      "types": "./process.d.ts",
      "import": "./dist/process.mjs",
      "require": "./dist/process.js",
      "default": "./dist/process.js"
    },
    "./server": {
      "types": "./server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint --cache --no-error-on-unmatched-pattern --no-warn-ignored --fix",
    "lint:turbo": "pnpm lint . --max-warnings 0",
    "style": "prettier --log-level warn --ignore-unknown --no-error-on-unmatched-pattern --cache",
    "style:check": "pnpm style --check",
    "style:format": "pnpm style --write",
    "test": "dotenv -v NODE_ENV=test -v FORCE_COLOR=1 -- vitest",
    "test:turbo": "dotenv -v CI=true -- pnpm run test --coverage --reporter tree",
    "types:check": "tsc --noEmit",
    "typegen:fixtures": "tsx ./scripts/typegen/generateFixtureTypes.js"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@zimic/eslint-config-node": "workspace:*",
    "@zimic/lint-staged-config": "workspace:*",
    "@zimic/tsconfig": "workspace:*",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
