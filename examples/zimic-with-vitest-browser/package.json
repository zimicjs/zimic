{
  "name": "zimic-example-with-vitest-browser",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "setup": "concurrently --names playwright,zimic 'pnpm setup-playwright' 'pnpm setup-zimic'",
    "setup-zimic": "zimic-interceptor browser init ./public || true",
    "setup-playwright": "playwright install chromium",
    "test": "vitest",
    "test:turbo": "dotenv -v CI=true -- pnpm run test run",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@zimic/fetch": "latest",
    "@zimic/http": "latest"
  },
  "devDependencies": {
    "@vitest/browser": "^4.0.9",
    "@vitest/browser-playwright": "^4.0.9",
    "@zimic/interceptor": "latest",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "playwright": "^1.56.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
