{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": ["pnpm install"],
  "tasks": {
    "run-app": {
      "name": "Run application",
      "command": "pnpm run dev",
      "runAtStart": true
    },
    "run-tests": {
      "name": "Run tests",
      "command": "pnpm run test --ui",
      "runAtStart": true
    }
  }
}
