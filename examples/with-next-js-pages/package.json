{
  "name": "zimic-example-with-next-js-pages",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "dev": "dotenv -c development -- next dev --turbo --port 3008",
    "test": "dotenv -c test -- dotenv -c development -- playwright test",
    "test:turbo": "dotenv -v CI=true -- pnpm run test",
    "types:check": "tsc --noEmit",
    "deps:install-playwright": "playwright install chromium",
    "deps:init-zimic": "zimic browser init ./public || true",
    "postinstall": "concurrently --names playwright,zimic 'pnpm deps:install-playwright' 'pnpm deps:init-zimic'"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.64.1",
    "clsx": "^2.1.1",
    "next": "^15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "zimic": "latest"
  }
}
