{
  "name": "zimic-example-with-next-js-pages",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "dev": "dotenv -c development -- next dev",
    "test": "dotenv -c test -- dotenv -c development -- playwright test",
    "test:turbo": "dotenv -v CI=true -- pnpm run test",
    "types:check": "tsc --noEmit",
    "deps:setup-playwright": "playwright install chromium",
    "deps:setup-zimic": "zimic-interceptor browser init ./public || true",
    "deps:setup": "concurrently --names playwright,zimic 'pnpm deps:setup-playwright' 'pnpm deps:setup-zimic'"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.9",
    "@zimic/fetch": "latest",
    "@zimic/http": "latest",
    "next": "^16.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@zimic/interceptor": "latest",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  }
}
