{
  "name": "zimic-example-with-playwright",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "turbo": "turbo",
    "dev": "dotenv -c development -- node --run dev:no-env",
    "dev:mock": "dotenv -c test -- dotenv -c development -- node --run mock -- -- -- node --run dev:no-env",
    "dev:no-env": "next dev --turbo --port 3002",
    "mock": "node --run mock:start -- -- node --run mock:load",
    "mock:start": "zimic server start --port 3003 --ephemeral",
    "mock:load": "tsx ./tests/interceptors/scripts/load.ts",
    "test": "dotenv -c test -- dotenv -c development -- playwright test",
    "test:turbo": "dotenv -v CI=true -- node --run test",
    "types:check": "tsc --noEmit",
    "deps:install-playwright": "playwright install chromium",
    "postinstall": "node --run deps:install-playwright"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.8.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "dotenv-cli": "^7.4.2",
    "execa": "^9.4.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "zimic": "latest"
  }
}
