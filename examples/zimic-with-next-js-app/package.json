{
  "name": "zimic-example-with-next-js-app",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "dev": "dotenv -c development -- next dev --turbo",
    "mock": "pnpm mock:start -- pnpm mock:load",
    "mock:start": "zimic-interceptor server start --hostname 127.0.0.1 --port 4001 --ephemeral",
    "mock:load": "tsx ./tests/interceptors/scripts/load.ts",
    "test": "dotenv -c test -- dotenv -c development -- pnpm mock -- playwright test",
    "test:turbo": "dotenv -v CI=true -- pnpm run test",
    "types:check": "tsc --noEmit",
    "deps:install-playwright": "playwright install chromium",
    "postinstall": "pnpm deps:install-playwright"
  },
  "dependencies": {
    "@zimic/fetch": "latest",
    "@zimic/http": "latest",
    "next": "^15.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@zimic/interceptor": "latest",
    "dotenv-cli": "^10.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
