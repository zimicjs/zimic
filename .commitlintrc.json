{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["build", "chore", "docs", "feat", "fix", "perf", "refactor", "revert", "style", "test"]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "root",
        "ci",
        "wiki",
        "release",
        "zimic-test-client",
        "#zimic",
        "#release",
        "#eslint",
        "#eslint-node",
        "#lint-staged",
        "#tsconfig",
        "examples",
        "example-vitest-node",
        "example-vitest-browser",
        "example-vitest-jsdom",
        "example-jest-node",
        "example-jest-jsdom",
        "example-playwright",
        "example-next-js-app",
        "example-next-js-pages",
        "example-openapi-typegen"
      ]
    ],
    "scope-empty": [2, "never"]
  }
}
