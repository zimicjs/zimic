{
  "name": "zimic-test-client",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "setup": "concurrently --names playwright,zimic 'playwright install chromium' 'zimic-interceptor browser init ./public || true'",
    "lint": "eslint --cache --no-error-on-unmatched-pattern --no-warn-ignored --fix",
    "lint:turbo": "pnpm lint . --max-warnings 0",
    "style": "prettier --log-level warn --ignore-unknown --no-error-on-unmatched-pattern --cache",
    "style:check": "pnpm style --check",
    "style:format": "pnpm style --write",
    "test": "dotenv -v NODE_ENV=test -v FORCE_COLOR=1 -- zimic-interceptor server start --port 4000 --ephemeral -- vitest",
    "test:turbo": "dotenv -v CI=true -- pnpm run test run --coverage",
    "types:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/superagent": "^8.1.9",
    "@vitest/browser": "^4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-istanbul": "^4.0.15",
    "@zimic/eslint-config-node": "workspace:*",
    "@zimic/fetch": "workspace:*",
    "@zimic/http": "workspace:*",
    "@zimic/interceptor": "workspace:*",
    "@zimic/lint-staged-config": "workspace:*",
    "@zimic/tsconfig": "workspace:*",
    "@zimic/utils": "workspace:*",
    "axios": "^1.13.2",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "node-fetch": "^3.3.2",
    "playwright": "^1.57.0",
    "superagent": "^10.2.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
